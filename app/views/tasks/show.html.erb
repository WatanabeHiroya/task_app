<% provide(:title, @user.name) %>

<div class="container">
  <h1>タスク詳細</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered" id="table-task">
        <tbody>
          <tr>
            <th class="active col-md-2">ID</th>
            <td class="col-md-10"><%= @task.id %></td>
          </tr>
          <tr>
            <th class="active">名称</th>
            <td><%= @task.title %></td>
          </tr>
          <tr>
            <th class="active">詳細</th>
            <td><%= content_url_to_link(h(@task.content)).html_safe %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= @task.created_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
          <tr>
            <th class="active">更新日</th>
            <td><%= @task.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to "編集", edit_user_task_path(@user), class: "btn btn-success" %>
        <%= link_to "削除", user_task_path(@user), method: :delete, data: { confirm: "削除してよろしいですか？"}, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>