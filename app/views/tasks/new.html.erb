<%= provide(:title, "New Task") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>タスク新規作成</h1>
      <%= form_with(model: @task, url:user_tasks_path(@user), local: true ) do |f| %>
      
        <%= f.label :title, class: "label-new-task" %>
        <%= f.text_field :title, class: "form-control" %>
      
        <%= f.label :content, class: "label-new-task" %>
        <%= f.text_field :content, class: "form-control" %>
        
        <%= f.submit "新規作成", class: "btn btn-primary btn-new-task" %>
      <% end %>
    </div>
  </div>
  
</div>