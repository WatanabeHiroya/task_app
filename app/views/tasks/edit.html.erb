<% provide(:title, "Edit Task") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>タスク編集</h1>
      <%= form_with(model: @task, url:user_task_path(@user), method: :patch, local: true) do |f| %>
        <%= render 'shared/error_messages2', object: @task %>

        <%= f.label :title, class: "label-new-task" %>
        <%= f.text_field :title, class: "form-control" %>
        
        <%= f.label :content, class: "label-new-task" %>
        <%= f.text_area :content, class: "form-control" %>
        
        <%= f.submit "更新", class: "btn btn-primary btn-new-task" %>
      <% end %>
    </div>
  </div>
</div>